@model Person
@{
    ViewBag.Title = "Default";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <ul class="nav nav-pills">
        <li>@Html.ActionLink("Horizontal", "Horizontal")</li>
        <li>@Html.ActionLink("Inline", "Inline")</li>
        <li class="active">@Html.ActionLink("Default", "Default")</li>
    </ul>
</div>

<br />

<div class="row">

    @using (var form = Html.f().Form().Label_col_sm(2).Input_col_sm(10).BeginForm())
    {
        @form.TextBoxFor(m => m.FirstName).HelpText("Enter First Name").Placeholder("First Name").Focus()
        @form.TextBoxFor(m => m.LastName).HasSuccess()
        @form.TextBoxFor(m => m.Email).Disabled()
        @form.PasswordFor(m => m.Password)
        @form.CheckBoxFor(m => m.AcceptTerms)        
        @form.RadioButtonFor(m => m.Gender, "M").LabelText("Male")
        @form.RadioButtonFor(m => m.Gender, "F").LabelText("Female")
        @form.ListBoxFor(m=>m.TimeZoneId,Model.AvailableTimeZones)
        @form.TextBoxFor(m => m.File, new {type="file" })
        @form.TextAreaFor(m=>m.Description)
        
    }


</div>