@model Person
@{
    ViewBag.Title = "Horizontal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <ul class="nav nav-pills">
        <li class="active">@Html.ActionLink("Horizontal", "Horizontal")</li>
        <li>@Html.ActionLink("Inline", "Inline")</li>
        <li>@Html.ActionLink("Default", "Default")</li>
    </ul>
</div>

<br />

<div class="row">

    @using (var form = Html.f().Form().Horizontal().Label_col_sm(2).Input_col_sm(4).Input_col_md(4).BeginForm())
    {
        @form.TextBoxFor(m => m.FirstName).CheckBoxFor(m=>m.AcceptTerms)
        @form.StaticFor(m => m.FirstName)
        @form.TextBoxFor(m => m.LastName).HasError().Col_md(8).hidden_sm()
        @form.TextBoxFor(m => m.Email).CheckBoxFor(m=>m.BlogPosts)
        @form.TextBoxFor(m => m.Title).Large()
        @form.PasswordFor(m => m.Password)
        @form.CheckBoxFor(m => m.AcceptTerms)
        @form.CheckBoxFor(m=>m.ForumPosts).CheckBoxFor(m=>m.Newsletter)
        @form.RadioButtonFor(m => m.Gender, "M").LabelText("Male").RadioButtonFor(m => m.Gender, "F").LabelText("Female")
        @form.DropDownListFor(m => m.TimeZoneId, Model.AvailableTimeZones).HasError()
        @form.TextBoxFor(m => m.File, new { type = "file" })
        @form.TextAreaFor(m => m.Description)
        @form.StaticFor(m => m.Log)
       
    }


</div>