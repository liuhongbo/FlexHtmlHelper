@model Person
@{
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

<div class="row">

    @using (var form = Html.f().Form().horizontal().BeginForm())
    {
        @form.TextBoxFor(m => m.FirstName)
        @form.TextBoxFor(m => m.LastName)
        @form.PasswordFor(m => m.Password)
       
        @Html.Partial("_Address", Model.Address)

        @form.DropDownListFor(m => m.TimeZoneId, Model.AvailableTimeZones)
        @form.TextBoxFor(m => m.File, new { type = "file" })
        @form.CheckBoxFor(m => m.AcceptTerms)
    }

</div>

<hr />
<div class="row">
    <div class="col-xs-12">
        <script src="@string.Format("http://gist-it.appspot.com/github/liuhongbo/FlexHtmlHelper/blob/master/src/FlexHtmlHelper.Sample/Views/{0}/{1}.cshtml?footer=0",Html.ViewContext.RouteData.Values["Controller"].ToString(),"_Address")"></script>
    </div>
</div>
<hr />
