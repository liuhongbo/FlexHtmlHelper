@model Person
@{    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @Html.f().TextBoxFor(m => m.FirstName).col_md(4).placeholder("text col_md(4).row").row()   
<br />
    @Html.f().PasswordFor(m => m.Password).col_md(4).placeholder("password col_md(4).row").row()
<br />    
    @Html.f().TextBoxFor(m => m.File, new { type = "file" }).row()
<br />
    @Html.f().DropDownListFor(m => m.TimeZoneId, Model.AvailableTimeZones).row()
<br />
    @Html.f().TextAreaFor(m=>m.Description).col_md(4).placeholder("textarea col_md(4).row").row()
<br />
