@model Person
@{
    ViewBag.Title = "Grid Column Offset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <ul class="nav nav-pills">
        <li>@Html.ActionLink("Row", "Row")</li>
        <li>@Html.ActionLink("Column", "Column")</li>
        <li>@Html.ActionLink("Column Offset", "ColumnOffset")</li>
        <li>@Html.ActionLink("Column Order", "ColumnOrder")</li>
        <li class="active">@Html.ActionLink("Column Visible", "ColumnVisible")</li>
    </ul>
</div>

<br />


<div class="row">
    @Html.f().TextAreaFor(m => m.Description).col_md(4).placeholder("hidden_md").hidden_md()
</div>

<br />

<div class="row">
    @Html.f().TextAreaFor(m => m.Description).col_md(4).placeholder("visible_md").visible_md()
</div>

<br />
<div class="row">
    @Html.f().TextAreaFor(m => m.Description).col_md(4).placeholder("hidden_print").hidden_print()
</div>
